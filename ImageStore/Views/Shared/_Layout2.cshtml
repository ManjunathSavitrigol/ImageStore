
<html>

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Sweet alert -->
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <!-- Font awesome-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/c ss/all.min.css" />


    <!--font-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Rubik&display=swap" rel="stylesheet">

    <!-- Jquery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script type="text/javascript" src="http://code.jquery.com/color/jquery.color-2.1.2.js"></script>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />

    <!-- Bootstrap Js-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>
    <style>
        * {
            /*font-family: 'Poppins', sans-serif;*/
            font-family: 'Rubik', sans-serif;
        }

        #navigationbar {
            background-color: #2c5f2d;
            color: white;
        }

            #navigationbar a {
                color: white;
            }

        .brandimage {
            width: 50px;
            height:50px;
            border: 3px solid black;
        }

        .vl-name {
            white-space: nowrap;
            text-overflow: ellipsis;
        }

        * {
            /*font-family: 'Poppins', sans-serif;*/
            font-family: 'Rubik', sans-serif;
        }


        /* Image card design */
        .imagecard {
            max-width: 24rem;
            min-height: 36rem;
            border-radius: 10px;
            overflow: hidden;
            cursor: pointer;
            position: relative;
            color: rgb(240, 240, 240);
            box-shadow: 0 10px 30px 5px rgba(0, 0, 0, 0.2);
        }

            .imagecard img {
                position: absolute;
                object-fit: fill;
                width: 100%;
                height: 100%;
                top: 0;
                left: 0;
                opacity: 0.9;
                transition: opacity .1s ease-out;
            }

            .imagecard h2 {
                position: absolute;
                inset: auto auto 30px 30px;
                margin: 0;
                transition: inset .1s .1s ease-out;
                font-family: 'Roboto Condensed', sans-serif;
                font-weight: normal;
                text-transform: uppercase;
            }

            .icon-heart,
            .icon-download,
            .imagecard a,
            .imagecard p {
                position: absolute;
                opacity: 0;
                max-width: 80%;
                transition: opacity .1s ease-out;
            }

        .icon-heart {
            inset: auto auto 520px 300px;
        }

        .icon-download {
            inset: auto auto 40px 300px;
        }

        .imagecard p {
            inset: auto auto 35px 85px;
            color: white;
            text-decoration: none;
        }

        .imagecard a {
            inset: auto auto 40px 30px;
            color: white;
            text-decoration: none;
            height: 50px;
        }

        .imagecard:hover h2 {
            inset: auto auto 220px 30px;
            transition: inset .1s ease-out;
        }

        .imagecard:hover .icon-heart,
        .imagecard:hover .icon-download,
        .imagecard:hover p,
        .imagecard:hover a {
            opacity: 1;
            transition: opacity .1s .1s ease-in;
        }

        .imagecard:hover img {
            transition: opacity .1s ease-in;
            opacity: 1;
        }

        /* image card design end */

        /* browse and uplode design */
        .fileupload {
            height: 100vh;
            width: 100%;
            align-items: center;
            display: flex;
            justify-content: center;
            background-color: #fcfcfc;
        }

            .fileupload .card {
                border-radius: 10px;
                box-shadow: 0 5px 10px 0 rgba(0, 0, 0, 0.3);
                width: 600px;
                background-color: #ffffff;
                padding: 10px 30px 40px;
            }

                .fileupload .card h3 {
                    font-size: 22px;
                    font-weight: 600;
                }

            .fileupload .drop_box {
                margin: 10px 0;
                padding: 30px;
                display: flex;
                align-items: center;
                justify-content: center;
                flex-direction: column;
                border: 3px dotted #a3a3a3;
                border-radius: 5px;
            }

                .fileupload .drop_box h4 {
                    font-size: 16px;
                    font-weight: 400;
                    color: #2e2e2e;
                }

                .fileupload .drop_box p {
                    margin-top: 10px;
                    margin-bottom: 20px;
                    font-size: 12px;
                    color: #a3a3a3;
                }

            .fileupload .btn {
                text-decoration: none;
                background-color: #005af0;
                color: #ffffff;
                padding: 10px 20px;
                border: none;
                outline: none;
                transition: 0.3s;
            }

                .fileupload .btn:hover {
                    text-decoration: none;
                    background-color: #ffffff;
                    color: #005af0;
                    padding: 10px 20px;
                    border: none;
                    outline: 1px solid #010101;
                }

            .fileupload .form input {
                margin: 10px 0;
                width: 100%;
                background-color: #e2e2e2;
                border: none;
                outline: none;
                padding: 12px 20px;
                border-radius: 4px;
            }
    </style>
</head>

<body>
    <div class="wrapper position-relative">
        <nav class="navbar navbar-expand-lg sticky-top" id="navigationbar">
            <div class="container-fluid">
                <a class="navbar-brand ps-lg-5" href="@Url.Content("~/UploaderProfile/Index")">
                    <img src="@Session["ProfileImage"].ToString().Trim('~')"
                         class="rounded-pill brandimage">
                </a>
                <div>@Session["FullName"].ToString()</div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span><i class="fa fa-bars"></i></span>
                </button>
                <div class="collapse navbar-collapse " id="navbarSupportedContent">
                    <div class="w-100 d-lg-flex justify-content-end pe-lg-5">
                        <ul class="navbar-nav  gap-3">
                            <li class="nav-item">
                                <a class="nav-link active" href="@Url.Action("Index", "ImageUploader")">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" href="@Url.Action("Index", "UploaderProfile")">Profile</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" href="@Url.Action("Logout", "login")">Logout<i class="fa fa-sign-out"></i></a>
                            </li>                            
                        </ul>
                    </div>

                </div>
            </div>
        </nav>
        <div id="mainbody">
            @RenderBody()
        </div>
    </div>
</body>
</html>
