<html>

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Font awesome-->
    <!--<link rel="stylesheet" href="/Images/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/c ss/all.min.css" />-->
    <link rel="stylesheet" href="~/Content/FontAwesome/css/font-awesome.css" />

    <!--font-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Rubik&display=swap" rel="stylesheet">

    <!-- Jquery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script type="text/javascript" src="http://code.jquery.com/color/jquery.color-2.1.2.js"></script>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />

    <!-- Bootstrap Js-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>

    <style>
        * {
            /*font-family: 'Poppins', sans-serif;*/
            font-family: 'Rubik', sans-serif;
        }

        .brandimage {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            border: 3px solid black;
        }

        /* Image card design */
        .imagecard {
            max-width: 24rem;
            min-height: 36rem;
            border-radius: 10px;
            overflow: hidden;
            cursor: pointer;
            position: relative;
            color: rgb(14, 14, 14);
            box-shadow: 0 10px 30px 5px rgba(0, 0, 0, 0.2);
            inset: 0px 0px 20px 10px rgba(0, 0, 0, 0.6);
        }

            .imagecard img {
                position: absolute;
                object-fit: fill;
                width: 100%;
                height: 100%;
                top: 0;
                left: 0;
                opacity: 0.9;
                transition: opacity .1s ease-out;
            }

            .imagecard h2 {
                position: absolute;
                inset: auto auto 30px 30px;
                margin: 0;
                transition: inset .1s .1s ease-out;
                font-family: 'Roboto Condensed', sans-serif;
                font-weight: normal;
                text-transform: uppercase;
                color: rgb(255, 255, 255);
            }

            .icon-heart,
            .icon-download,
            .imagecard a,
            .imagecard p {
                position: absolute;
                opacity: 0;
                max-width: 80%;
                transition: opacity .1s ease-out;
            }

        .icon-heart {
            inset: auto auto 520px 300px;
            color: white;
        }

        .icon-download {
            inset: auto auto 40px 300px;
            color: white;
        }

        .imagecard p {
            inset: auto auto 35px 85px;
            color: rgb(255, 255, 255);
            text-decoration: none;
        }

        .imagecard a {
            inset: auto auto 40px 30px;
            color: white;
            text-decoration: none;
            height: 50px;
        }

        .imagecard:hover h2 {
            inset: auto auto 100px 30px;
            transition: inset .1s ease-out;
        }

        .imagecard:hover .icon-heart,
        .imagecard:hover .icon-download,
        .imagecard:hover p,
        .imagecard:hover a,
        .imagecard:hover .shadowtop,
        .imagecard:hover .shadowbottom {
            opacity: 1;
            transition: opacity .1s .1s ease-in;
        }

        .imagecard:hover img {
            transition: opacity .1s ease-in;
            opacity: 1;
        }

        .card-content .shadowbottom {
            position: absolute;
            width: 100%;
            bottom: 0;
            box-shadow: 0 0 100px 100px rgba(124, 124, 124, 0.586);
            opacity: 0.5;
        }

        .card-content .shadowtop {
            position: absolute;
            width: 100%;
            top: 0;
            box-shadow: 0 0 100px 100px rgba(124, 124, 124, 0.586);
            opacity: 0;
        }

        /* image card design end */
    </style>
</head>

@{ string sessionStared = Session["SessionStart"]?.ToString();}

<body>
    <div class="wrapper">
        <div class="container-fluid w-100">
            <nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top justify-content-center">
                <div class="container-fluid">
                    <a class="navbar-brand " href="#">
                        <img src="@ViewBag.Logo"
                             class="brandimage">
                    </a>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                @if (sessionStared == "true")
                                {
                                    <span>@Session["FullName"].ToString()</span>
                                }
                                else
                                {
                                    <span>
                                        WELCOME
                                    </span>
                                }
                            </li>
                            @*
                                <li class="nav-item">
                                    <a class="nav-link" href="#" aria-current="page">Dashboard</a>
                                </li>*@
                        </ul>
                        <form class="d-flex ">
                            <input class="form-control mt-3" type="search" placeholder="Search" aria-label="Search" id="search_byname1">
                            <button class="btn btn-outline-success mt-3" type="button" id="search1">Search</button>
                        </form>
                        <div class="d-flex ms-lg-3 mt-lg-0 mt-3">
                            @if (sessionStared == "true")
                            {
                                <a class="btn btn-success" href="@Url.Action("Index", "ImageUploader")">Upload</a>
                            }
                            else
                            {
                                <a class="btn btn-success" href="@Url.Action("Index", "Login")">Become a Uploader</a>
                            }

                        </div>
                    </div>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                            data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="d-flex ms-lg-3 mt-lg-0">
                        <div class="btn-group dropstart">
                            <button type="button" class="btn btn-danger " data-bs-toggle="dropdown"
                                    aria-expanded="false" style="border-radius: 50%; height: 50px;width: 50px;">
                                <i class="fa fa-user"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-start">
                                @if (sessionStared == "true")
                                {
                                    <li><a class="dropdown-item" href="@Url.Action("index", "UploaderProfile")">Profile</a></li>
                                    <li>
                                        <hr class="dropdown-divider">
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("Logout", "Login")">Logout &ensp;<i class="fa fa-sign-out"></i></a>
                                    </li>
                                }
                                else
                                {
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("index", "login")">Login &ensp;<i class="fa fa-sign-in"></i></a>
                                    </li>
                                }

                            </ul>
                        </div>
                    </div>
                </div>
            </nav>

            @RenderBody()

        </div>
    </div>
</body>

</html>
