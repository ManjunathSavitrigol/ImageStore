<html>

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />


    @Scripts.Render("~/bundles/mainjs")
    @Styles.Render("~/bundles/maincss")

    <!--font-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Rubik&display=swap" rel="stylesheet">

    <!-- Bootostrap JQuery -->
    <!--<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>-->

    <style>
        * {
            /*font-family: 'Poppins', sans-serif;*/
            font-family: 'Rubik', sans-serif;
        }

        .brandimage {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            border: 3px solid black;
        }
    </style>
</head>

@{ string sessionStared = Session["SessionStart"]?.ToString();}

<body>
    <div class="wrapper">
        <div class="container-fluid w-100 p-0">
            <nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top justify-content-center">
                <div class="container-fluid">
                    <a class="navbar-brand " href="#">
                        <img src="@ViewBag.Logo"
                             class="brandimage">
                    </a>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                @if (sessionStared == "true")
                                {
                                    <span>@Session["FullName"].ToString()</span>
                                }
                                else
                                {
                                    <span>
                                        WELCOME
                                    </span>
                                }
                            </li>
                            @*
                                <li class="nav-item">
                                    <a class="nav-link" href="#" aria-current="page">Dashboard</a>
                                </li>*@
                        </ul>
                        <form class="d-flex ">
                            <input class="form-control mt-3" type="search" placeholder="Search" aria-label="Search" id="search_byname1">
                            <button class="btn btn-outline-success mt-3" type="button" id="search1">Search</button>
                        </form>
                        <div class="d-flex ms-lg-3 mt-lg-0 mt-3">
                            @if (sessionStared == "true")
                            {
                                <a class="btn btn-success" href="@Url.Action("Index", "ImageUploader")">Upload</a>
                            }
                            else
                            {
                                <a class="btn btn-success" href="@Url.Action("Index", "Login")">Become a Uploader</a>
                            }

                        </div>
                    </div>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                            data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="d-flex ms-lg-3 mt-lg-0">
                        <div class="btn-group dropstart">
                            <button type="button" class="btn btn-danger " data-bs-toggle="dropdown"
                                    aria-expanded="false" style="border-radius: 50%; height: 50px;width: 50px;">
                                <i class="fa fa-user"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-start">
                                @if (sessionStared == "true")
                                {
                                    <li><a class="dropdown-item" href="@Url.Action("index", "UploaderProfile")">Profile</a></li>
                                    <li>
                                        <hr class="dropdown-divider">
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("Logout", "Login")">Logout &ensp;<i class="fa fa-sign-out"></i></a>
                                    </li>
                                }
                                else
                                {
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("index", "login")">Login &ensp;<i class="fa fa-sign-in"></i></a>
                                    </li>
                                }

                            </ul>
                        </div>
                    </div>
                </div>
            </nav>

            @RenderBody()

        </div>
    </div>
</body>

</html>
