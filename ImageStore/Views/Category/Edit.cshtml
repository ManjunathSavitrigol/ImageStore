@model ImageStore.Data.EdmxModel.Categories

@{
    ViewBag.Title = "Edit";
}

<div id="page-content-topbar">
    <div class="navbar navbar-expand-lg navbar-light border-bottom-0">

        <!--button for toggling the sidebar-->
        @Html.Partial("_TopLeft")

        <!-- current page indication by breadcrumb-->
        <div class="pt-3 ps-2 ">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Category")">Category Master</a></li>
                    <li><i class="fa fa-angle-right p-1"></i></li>
                    <li class="breadcrumb-item n-active" aria-current="page">@ViewData["ActionName"]</li>
                </ol>               
            </nav>
        </div>

        <!-- last login and logout-->
        @Html.Partial("_TopRight")
    </div>
</div>

<div id="main-content">
    <div class="card mt-2">
        <div class="card-body">

            @using (Html.BeginForm("Save", "Category", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Id);

                <div class="row">
                    <div class="col-4 mb-2">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-12 text-center">
                        <button type="submit" class="btn btn-primary" id="save">Save</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<script type="text/javascript">
    $("#save").on("click", function () {
        let name = $("#Name").val();
        if (name.trim() == "") {
            $("#Name").focus();
            return false;
        }
    })
</script>